<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.mohamedhashim.mobiquity.ui.component.splash.SplashFragment"
        android:label="Blank"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_ProductListFragment"
            app:destination="@id/categoriesFragment" />
    </fragment>

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.mohamedhashim.mobiquity.ui.component.categories.CategoriesFragment"
        android:label="ProductListFragment"
        tools:layout="@layout/fragment_categories_list">
        <action
            android:id="@+id/actionProductDetails"
            app:destination="@id/productDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.mohamedhashim.mobiquity.ui.component.details.ProductDetailsFragment"
        android:label="ProductDetailsFragment"
        tools:layout="@layout/fragment_product_details" />

</navigation>